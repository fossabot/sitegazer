{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "newLine": "lf",
    "target": "es2015",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "supercrawler": [ "types/supercrawler" ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "strict": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
